<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_template"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:gravity="center">

        <EditText
            android:id="@+id/wel_reg_username"
            android:layout_width="330px"
            android:layout_height="100px"
            android:background="@color/white"
            android:drawableLeft="@mipmap/basket_user_icon"
            android:drawablePadding="20px"
            android:hint="请输入姓氏"
            android:paddingLeft="20px"
            android:textColorHint="@color/font_gray" />

        <RadioGroup
            android:id="@+id/wel_reg_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/wel_reg_male"
                android:layout_width="104px"
                android:layout_height="58px"
                android:background="@drawable/basket_userinfo_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="先生"
                android:textColor="@drawable/basket_userinfo_font_selector" />

            <RadioButton
                android:id="@+id/wel_reg_female"
                android:layout_width="104px"
                android:layout_height="58px"
                android:layout_marginLeft="10px"
                android:background="@drawable/basket_userinfo_selector"
                android:button="@null"
                android:gravity="center"
                android:text="女士"
                android:textColor="@drawable/basket_userinfo_font_selector" />

        </RadioGroup>

    </LinearLayout>

    <EditText
        android:id="@+id/wel_reg_phone"
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:background="@color/white"
        android:drawableLeft="@mipmap/my_phone_blue_icon"
        android:drawablePadding="20px"
        android:hint="请输入手机号码"
        android:paddingLeft="20px"
        android:textColorHint="@color/font_gray" />

    <TextView
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="40px"
        android:drawableLeft="@mipmap/basket_location_icon"
        android:drawablePadding="5px"
        android:text="收货地址"
        android:textSize="32px" />
    <!--bug需要进一步设置-->
    <Spinner
        android:id="@+id/wel_reg_district"
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="16px"
        android:background="@color/white"
        android:spinnerMode="dropdown" />

    <LinearLayout
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <TextView
            android:id="@+id/apartment"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="小区"
            android:textSize="32px" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="上城成都花园 6栋二单元1204"
            android:paddingRight="20px"
            android:textAlignment="viewEnd"
            android:textSize="28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="580px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="@color/white">

        <TextView
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="详细地址"
            android:textSize="32px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="成都市青羊区 家园南街1号"
            android:paddingRight="20px"
            android:textAlignment="viewEnd"
            android:textSize="28px" />
    </LinearLayout>

    <TextView
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:text="请精准填写您所在的街道、小区、栋、单元、号"
        android:textSize="22px" />

    <Button
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="80px"
        android:background="@color/base_blue"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="36px" />
</LinearLayout>